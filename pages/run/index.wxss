.run_header {
    position:fixed;
    top:0px;
    width:100%;
    height:40px;
    z-index:1;
    background:#000;
    color:#09ff00;
    line-height: 40px;
    opacity: 0.7;
}

.run_bottom {
    position: fixed;
    bottom: 20px;
    width: 50%;
    height: 40px;
    background: #000;
    left: 50%;
    transform:translate(-50%);
    border-radius: 10px;
    color:#09ff00;
    text-align: center;
    line-height: 40px;
    opacity: 0.7;
}